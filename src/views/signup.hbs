<h2 class="page-header">Sign-Up</h2>
{{#if errors}}
    {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
    {{/each}}
{{/if}}

<form method="post" action="/register">
    <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" placeholder="Name" name="name">
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="email" class="form-control" placeholder="Email" name="email">
    </div>
    <div class="form-group">
        <label>Password</label>
        <input type="password" class="form-control" placeholder="Password" name="password">
    </div>
    <div class="form-group">
        <label>Confirm Password</label>
        <input type="password" class="form-control" placeholder="Password" name="password2">
    </div>
    <div class="form-group avatar-group" >
        <label>Please pick an avatar</label>

        <label>
            <input type="radio" name="avatar" value="bear.png" />
            <img src="./assets/bear.png">
        </label>
        <label>
            <input type="radio" name="avatar" value="pig.png" />
            <img src="./assets/pig.png">
        </label><label>
        <input type="radio" name="avatar" value="dog.png" />
        <img src="./assets/dog.png">
    </label><label>
        <input type="radio" name="avatar" value="panda.png" />
        <img src="./assets/panda.png">
    </label>
        <label>
            <input type="radio" name="avatar" value="cat.png" />
            <img src="./assets/cat.png">
        </label>
        <label>
            <input type="radio" name="avatar" value="cow.png" />
            <img src="./assets/cow.png">
        </label>
        <label>
            <input type="radio" name="avatar" value="lion.png" />
            <img src="./assets/lion.png">
        </label>
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
</form>